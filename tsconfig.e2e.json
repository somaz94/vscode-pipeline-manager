{
    "compilerOptions": {
        "module": "Node16",
        "target": "ES2022",
        "lib": ["ES2022"],
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "types": ["node", "mocha"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node16",
        "skipLibCheck": true
    },
    "include": [
        "src/test/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "tests/**/*",
        "out/**/*"
    ]
}
